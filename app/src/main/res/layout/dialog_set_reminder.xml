<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"> <!-- Dışarıdan boşluk ekledik -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"> <!-- ScrollView'un tüm alanı kaplaması için ağırlık eklendi -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/> <!-- Aşağıda boşluk ekledik -->

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/> <!-- Aşağıda boşluk ekledik -->

            <!-- Diğer bileşenler burada -->

        </LinearLayout>
    </ScrollView>

    <!-- Diğer bileşenler burada, örneğin bir buton -->
</LinearLayout>
